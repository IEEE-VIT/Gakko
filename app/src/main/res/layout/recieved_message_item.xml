<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/received_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/incoming_message"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/sfprotet_regular"
        android:maxWidth="240dp"
        android:padding="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="10dp"
        android:text="hi man, how are you?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/received_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="11:40"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/received_message_body"
        app:layout_constraintStart_toEndOf="@+id/received_message_body" />

</androidx.constraintlayout.widget.ConstraintLayout>